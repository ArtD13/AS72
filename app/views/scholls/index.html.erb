<p id="notice"><%= notice %></p>

<div class="page-header">
<h1>Все Автошколы</h1>
</div>

<div id="box_wrapper">
<div class="container">
<div class="col-md-12">
<table class="table">
  <thead>
    <tr>
      <th>Название</th>
      <th>Адрес</th>
      <th>Телефон</th>
      <th>Категория</th>
      <th>Описание</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @scholls.each do |scholl| %>
      <tr>
        <td class="info"><%=link_to scholl.name, scholl %></td>
        <td><%= scholl.adress %></td>
        <td><%= scholl.phone %></td>
        <td><%= scholl.category %></td>
        <td><%= scholl.body %></td>
        <td><%= link_to 'Показать', scholl %></td>
        <td><%= link_to 'Редактировать', edit_scholl_path(scholl) %></td>
        <td><%= link_to 'Удалить', scholl, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Добавить автошколу', new_scholl_path %>

</div>
</div>
</div>